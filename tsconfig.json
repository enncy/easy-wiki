{
	"compilerOptions": {
		"target": "es5",
		"module": "commonjs",
		"declaration": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"esModuleInterop": true,
		"noImplicitAny": true,
		"strictNullChecks": true,
		"incremental": true,
		"skipLibCheck": true,
		"skipDefaultLibCheck": true,
		"outDir": "./lib"
	},
	"include": ["./src/**/*.ts", "index.ts"]
}
